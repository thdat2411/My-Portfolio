<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>task1</servlet-name>
        <jsp-file>/Task1/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>task1</servlet-name>
        <url-pattern>/Task1/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>task2</servlet-name>
        <jsp-file>/Task2/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>task2</servlet-name>
        <url-pattern>/Task2/ListofAlbums</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>task3_product</servlet-name>
        <jsp-file>/Task3/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>task3_product</servlet-name>
        <url-pattern>/Task3/Product</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>home.html</welcome-file>
    </welcome-file-list>
</web-app>